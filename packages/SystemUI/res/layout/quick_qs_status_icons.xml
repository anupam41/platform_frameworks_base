<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quick_qs_status_icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/status_bar_height"
    android:clickable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="vertical"
    android:theme="@style/QSHeaderTheme">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:format12Hour="h"
                android:format24Hour="k"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/colorAccent"
                android:textSize="56.0sp"
                android:textStyle="normal" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:format12Hour=":"
                android:format24Hour=":"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/colorAccent"
                android:textSize="56.0sp"
                android:textStyle="normal" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:format12Hour="mm"
                android:format24Hour="mm"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="56.0sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="start|center"
                android:background="@drawable/qs_bg1"
                android:format12Hour="EEEE"
                android:format24Hour="EEEE"
                android:gravity="center"
                android:minHeight="20dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/colorAccent"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="start|center"
                android:background="@drawable/qs_bg"
                android:format12Hour="MMMM d"
                android:format24Hour="MMMM d"
                android:gravity="center"
                android:minHeight="20dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12.0sp"
                android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/privacy_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_vertical|end" >

        <include layout="@layout/ongoing_privacy_chip" />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="start|center"
            android:background="@drawable/qs_bg1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="start|center"
                android:background="@drawable/qs_bg"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:singleLine="true"
                android:text="OCTAVI "
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/colorAccent"
                android:textSize="12.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="start|center"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:singleLine="true"
                android:text="OS"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="end|center"
            android:background="@drawable/qs_bg1"
            android:gravity="end"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <com.android.systemui.statusbar.policy.NetworkTraffic
                android:id="@+id/networkTraffic"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:lineSpacingMultiplier="1.2"
                android:paddingEnd="3dp"
                android:singleLine="false"
                systemui:showDark="false" />

            <com.android.systemui.BatteryMeterView
                android:id="@+id/batteryRemainingIcon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="@style/TextAppearance.StatusBar.Clock" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.android.systemui.statusbar.policy.Clock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="start|center"
            android:minWidth="48.0dip"
            android:minHeight="48.0dip"
            android:paddingStart="@dimen/status_bar_left_clock_starting_padding"
            android:paddingEnd="@dimen/status_bar_left_clock_end_padding"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.QS.Status" />

        <include
            android:id="@+id/carrier_group"
            layout="@layout/qs_carrier_group"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="end|center"
            android:layout_marginStart="8.0dip"
            android:layout_weight="1.0"
            android:focusable="false"
            android:minWidth="48.0dip"
            android:minHeight="48.0dip" />

        <com.android.systemui.statusbar.policy.NetworkTraffic
            android:id="@+id/networkTraffic"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="2.0dip"
            android:layout_marginEnd="2.0dip"
            android:lineSpacingMultiplier="1.2"
            android:paddingEnd="@dimen/status_bar_left_clock_end_padding"
            android:singleLine="false"
            systemui:showDark="false" />

        <View
            android:id="@+id/separator"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginStart="8.0dip"
            android:layout_marginEnd="8.0dip"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="end|center">

                <com.android.systemui.statusbar.phone.StatusIconContainer
                    android:id="@+id/statusIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingEnd="@dimen/signal_cluster_battery_padding" />

                <com.android.systemui.BatteryMeterView
                    android:id="@+id/batteryRemainingIcon"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:paddingEnd="2.0dip"
                    systemui:textAppearance="@style/TextAppearance.QS.Status" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
